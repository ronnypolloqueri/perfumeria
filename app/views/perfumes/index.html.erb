<h1>Listing perfumes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Marca</th>
      <th>Sexo</th>
      <th>Tipo</th>
      <th>Mililitro</th>
      <th>Imagen</th>
      <th>Precio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @perfumes.each do |perfume| %>
      <tr>
        <td><%= perfume.nombre %></td>
        <td><%= perfume.marca.descripcion %></td>
        <td><%= perfume.sexo.descripcion %></td>
        <td><%= perfume.tipo.descripcion %></td>
        <td><%= perfume.mililitro.descripcion %></td>
        <td><%= image_tag perfume.imagen_path %></td>
        <td><%= perfume.precio %></td>
        <td><%= link_to 'Show', perfume %></td>
        <td><%= link_to 'Edit', edit_perfume_path(perfume) %></td>
        <td><%= link_to 'Destroy', perfume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

